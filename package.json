{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "8.12.0",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "0.1.8",
    "turbo": "latest",
    "typescript": "4.6.3"
  },
  "engines": {
    "npm": "pleanse-use-yarn",
    "node": ">=14.0.0",
    "yarn": "^3"
  },
  "engineStrict": true,
  "packageManager": "yarn@3.2.0"
}
