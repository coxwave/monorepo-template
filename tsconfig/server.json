{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Server",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "typeRoots": ["**/node_modules/@types", "**/types"],
    "types": ["@types/jest"]
  }
}
